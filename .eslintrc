---
  # https://github.com/eslint/eslint/blob/master/docs/configuring/README.md

  env:
    node: true
    browser: true

  # https://github.com/eslint/eslint/tree/master/docs/rules
  rules:
    # possible errors
    no-cond-assign: 1
    no-console: 1
    no-constant-condition: 2
    no-comma-dangle: 1
    no-control-regex: 1
    no-debugger: 2
    no-dupe-keys: 2
    no-empty: 2
    no-empty-class: 2
    no-ex-assign: 2
    no-extra-boolean-cast: 1
    no-extra-parens: 1
    no-extra-semi: 2
    no-func-assign: 2
    no-inner-declarations: 1
    no-invalid-regexp: 2
    no-negated-in-lhs: 1
    no-obj-calls: 2
    no-regex-spaces: 1
    no-sparse-arrays: 2
    no-unreachable: 2
    use-isnan: 2
    valid-jsdoc: 1
    valid-typeof: 2

    # best practices
    block-scoped-var: 1
    complexity: 0
    consistent-return: 1
    curly: 2
    default-case: 1
    dot-notation: 0
    eqeqeq: 2
    guard-for-in: 1
    no-alert: 2
    no-caller: 2
    no-div-regex: 0
    no-else-return: 1
    no-empty-label: 2
    no-eq-null: 2
    no-eval: 2
    no-extend-native: 2
    no-fallthrough: 1
    no-floating-decimal: 1
    no-implied-eval: 2
    no-labels: 2
    no-iterator: 2
    no-lone-blocks: 2
    no-loop-func: 1
    no-multi-str: 1
    no-native-reassign: 2
    no-new: 0
    no-new-func: 2
    no-new-wrappers: 1
    no-octal: 2
    no-octal-escape: 2
    no-proto: 2
    no-redeclare: 2
    no-return-assign: 2
    no-script-url: 2
    no-self-compare: 2
    no-sequences: 1
    no-unused-expressions: 2
    # Definition for rule 'no-void' was not found
    # no-void: 2
    no-warning-comments: 0
    no-with: 2
    radix: 1
    wrap-iife: 1
    yoda: 0

    # strict mode
    # Definition for rule 'global-strict' was not found
    # global-strict: [2, "always"]
    no-extra-strict: 2
    strict: 2

    # variables
    no-catch-shadow: 2
    no-delete-var: 2
    no-label-var: 2
    no-shadow: 1
    no-shadow-restricted-names: 2
    no-undef: 2
    no-undefined: 2
    no-undef-init: 1
    no-unused-vars: 1
    no-use-before-define: 2

    # Node.js
    handle-callback-err: 2
    no-mixed-requires: 0
    no-path-concat: 2
    no-process-exit: 2
    no-restricted-modules: 0
    no-sync: 0

    # stylistic issues, disabled because of JSCS
    brace-style: 0
    camelcase: 0
    consistent-this: 0
    eol-last: 0
    func-names: 0
    func-style: 0
    new-cap: 1
    new-parens: 1
    no-nested-ternary: 0
    no-array-constructor: 1
    no-lonely-if: 1
    no-new-object: 1
    no-spaced-func: 0
    no-space-before-semi: 0
    no-ternary: 0
    no-trailing-spaces: 0
    no-underscore-dangle: 0
    no-wrap-func: 0
    no-mixed-spaces-and-tabs: 0
    quotes: 0
    quote-props: 0
    semi: 2
    sort-vars: 0
    space-after-keywords: 0
    space-in-brackets: 0
    space-in-parens: 0
    space-infix-ops: 0
    space-return-throw-case: 1
    space-unary-word-ops: 1
    max-nested-callbacks: 0
    one-var: 0
    wrap-regex: 0
